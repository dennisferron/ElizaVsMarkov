<Window x:Class="ElizaVsMarkov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElizaVsMarkov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" HorizontalAlignment="Center" Grid.Column="0" Source="pack://application:,,,/Images/craiyon_154508_A_man_whispering_to_a_robot__br_.png" />
        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Content="Simple Markov" />
        <Image Grid.Row="0" HorizontalAlignment="Center" Grid.Column="2" Source="pack://application:,,,/Images/ELIZA.gif" />
        <Label Content="ELIZA" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" />
        <ListBox Grid.Column="1" Grid.RowSpan="3" BorderBrush="Gray" BorderThickness="2" ScrollViewer.VerticalScrollBarVisibility="Visible">
        </ListBox>
        <Line Grid.Row="3" Grid.ColumnSpan="3" Margin="8,8,8,4" Stretch="Fill" Stroke="LightGray" X2="1"/>
        <Grid Grid.Row="4" Grid.ColumnSpan="3" Margin="2,4,2,4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <RibbonRadioButton Grid.Column="0" Grid.Row="0" Label="Suggest" 
                          SmallImageSource="Images/craiyon_164350_Icon__right_arrow__br_.png" 
                          LargeImageSource="Images/craiyon_164350_Icon__right_arrow__br_.png"
                          KeyTip="Suggest" />
            <RibbonRadioButton Grid.Column="0" Grid.Row="1" Label="Feedback" 
                          SmallImageSource="Images/craiyon_165216_A_group_of_emojis__br_.png" 
                          LargeImageSource="Images/craiyon_165216_A_group_of_emojis__br_.png"
                          KeyTip="Feedback" />

                <TextBlock Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Text="Enter a sentence to advise Simple Markov what to say to ELIZA." />
            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" TextWrapping="Wrap" />
                <Button Grid.Column="1" Content="Send" Width="80" Margin="2,2,2,2" />
            </Grid>
            <TextBlock Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="Rate this interaction to let Simple Markov know how he did." />
            <StackPanel Grid.Row="1" Grid.Column="2" Margin="40,0,0,0" Orientation="Horizontal" >
                <Button Margin="4,4,4,4" Width="60" Content="Love It" />
                <Button Margin="4,4,4,4" Width="60" Content="Hilarious" />
                <Button Margin="4,4,4,4" Width="60" Content="Not Bad" />
                <Button Margin="4,4,4,4" Width="60" Content="Crying" />
                <Button Margin="4,4,4,4" Width="60" Content="WTF?" />
            </StackPanel>
        </Grid>            
    </Grid>
</Window>
